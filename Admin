import ctypes
import sys
import subprocess
import os

def is_admin():
    try:
        return ctypes.windll.shell32.IsUserAnAdmin()
    except:
        return False

exe_to_run = "C:\\Path\\To\\Your\\Program.exe"  # Thay bằng đường dẫn tới file exe

if not is_admin():
    # Yêu cầu quyền admin
    ctypes.windll.shell32.ShellExecuteW(
        None, "runas", sys.executable, " ".join(sys.argv), None, 1
    )
    sys.exit()
else:
    # Đã có quyền admin, chạy file .exe
    subprocess.Popen([exe_to_run], shell=True,
                     stdout=subprocess.DEVNULL,
                     stderr=subprocess.DEVNULL)
